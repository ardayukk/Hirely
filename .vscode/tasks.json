{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Database",
            "type": "shell",
            "command": "python",
            "args": ["backend/setup_db.py"],
            "problemMatcher": []
        },
        {
            "label": "Run Backend",
            "type": "shell",
            "command": "python",
            "args": ["-m", "uvicorn", "backend.main:app", "--reload", "--port", "8000"],
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^INFO:.*Will watch for changes",
                    "endsPattern": "^INFO:.*Uvicorn running on"
                }
            },
            "group": "build"
        },
        {
            "label": "Run Frontend",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*VITE v.*",
                    "endsPattern": "^.*Local:.*"
                }
            },
            "group": "build"
        }
    ]
}